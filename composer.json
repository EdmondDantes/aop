{
    "name": "ifcastle/aop",
    "description": "The AOP library for PHP",
    "keywords": ["aop", "aspect-oriented programming", "php"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Edmond Dantes",
            "email": "edmondifthen@proton.me"
        }
    ],
    "require": {
        "php": ">=8.3"
    },
    "autoload": {
        "psr-4": {
            "IfCastle\\AOP\\": ["src/"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IfCastle\\AOP\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.2",
        "rector/rector": "^1.2"
    },
    "scripts": {
        "test": "vendor/bin/phpunit ./tests"
    }
}
